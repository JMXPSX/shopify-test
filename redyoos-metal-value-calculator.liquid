{% schema %}
{
  "name": "Metal Value Calculator",
  "settings": [],
  "blocks": [],
  "presets": [
    {
      "name": "Metal Value Calculator"
    }
  ]
}
{% endschema %}

<section class="metal-value-calculator" style="background-color:#f5f5f5; padding:40px 0;">
  <div class="page-width">
    <h2 style="text-align:center; font-weight:bold; margin-bottom:30px;">Metal Value Calculator</h2>
    <div style="display:flex; flex-wrap:wrap; gap:20px;">
      
      <!-- Left Form -->
      <div style="flex:1; min-width:300px; background:#fff; padding:20px; box-sizing:border-box;">
        <label>Select Metal</label>
        <select style="width:100%; padding:10px; margin-bottom:15px;">
          <option>Select Metal</option>
        </select>

        <label>Purity</label>
        <select style="width:100%; padding:10px; margin-bottom:15px;">
          <option>Select Purity</option>
        </select>

        <label>Weight</label>
        <textarea style="width:100%; padding:10px; margin-bottom:15px;" rows="3">
        </textarea>

        <label>Condition</label>
        <select style="width:100%; padding:10px; margin-bottom:15px;">
          <option>Select Condition</option>
        </select>

        <label>Gemstones</label>
        <select style="width:100%; padding:10px; margin-bottom:15px;">
          <option>Select Gemstones</option>
        </select>

        <label>Description</label>
        <textarea style="width:100%; padding:10px; margin-bottom:15px;" rows="3"></textarea>

        <label>Brand</label>
        <select style="width:100%; padding:10px; margin-bottom:15px;">
          <option>Select Brand</option>
        </select>

        <label>Marking/Stamps</label>
        <input type="text" style="width:100%; padding:10px; margin-bottom:15px;">

        <div style="margin-bottom:15px; font-size:14px; line-height:1.4;">
          <strong>Gold Price ($)</strong><br>
          Gold: $2000.00<br>
          Silver: $25.00<br>
          Platinum: $930.00
        </div>

        <textarea style="width:100%; padding:10px; margin-bottom:15px;" rows="3"></textarea>

        <button style="width:100%; padding:15px; background:#ccc; border:none; cursor:pointer;">
          Calculate Value
        </button>
      </div>

      <!-- Right Values -->
      <div style="flex:1; min-width:300px; display:flex; flex-direction:column; gap:20px;">
        <div style="display:flex; gap:20px;">
          <div style="flex:1; background:#e5e5e5; text-align:center; padding:20px;">
            <div style="font-size:24px; font-weight:bold;">$99.99</div>
            <div>Price Per Gram</div>
          </div>
          <div style="flex:1; background:#e5e5e5; text-align:center; padding:20px;">
            <div style="font-size:24px; font-weight:bold;">$99.99</div>
            <div>Estimated Value</div>
          </div>
        </div>

        <div style="background:#e5e5e5; text-align:center; padding:40px;">
          <div>Estimated Value AFTER Fees</div>
          <div style="font-size:28px; font-weight:bold;">$99.99</div>
        </div>
      </div>

    </div>
  </div>
</section>
